<h1>Blog Posts!</h1>
{{#each allPosts}}
    <div class="card">
    <div class="card-header">
        {{user.username}}
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
        <p>{{content}}</p>
        <footer class="blockquote-footer">{{user.username}} on {{user.posts.date_created}} </footer>
        </blockquote>
    </div>
    </div>
{{/each}}
